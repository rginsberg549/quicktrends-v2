<header class="row navbar navbar-light bg-light border">
  <div class="col">
    <div id="title" class="text-align-middle">
      <img class="logo img-fluid" src="assets/pictures/logo_transparent.png" alt="">
    </div>
  </div>
  <div class="col d-flex justify-content-end">
    <div class="top-buttons">
      <button type="button" onclick="location.href='/'" id="signup-button" class="btn bg-info">Home</button>
    </div>
</header>
<div class="row justify-content-center">
  <!-- This first column is to be used to change the background image to be shown next to the login form. See robinhood login... -->
  <div class="col-12">
    <img src="">
  </div>

  <div id="form-parent" class="col-6 align-self-center mt-5 p-3">
    <form action="/api/login" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div id="password-div" class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="form-group">
        <!-- Currently a dead link -->
        <a href="/signup">Don't have an account?</a>
      </div>
      <div class="form-group">
        <span class="text-danger">{{message}}</span>
      </div>
      <button id="sign-in" type="submit" class="btn">Sign In</button>
    </form>
  </div>
</div>